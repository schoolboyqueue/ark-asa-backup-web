{
  "name": "ark-asa-backup-web",
  "version": "3.0.0",
  "description": "ARK: Survival Ascended Backup Manager - React + Ant Design + TypeScript",
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "npm run dev:server & npm run dev:client",
    "dev:client": "vite",
    "dev:server": "nodemon --watch src/server.ts --exec 'npm run build:server && node dist/server.js'",
    "start": "node dist/server.js",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/dockerode": "^3.3.47",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/tar": "^6.1.10",
    "@vitejs/plugin-react": "^4.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.3",
    "vite": "^5.4.21"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.8.5",
    "@heroui/system": "^2.4.6",
    "@heroui/theme": "^2.4.23",
    "dayjs": "^1.11.10",
    "dockerode": "^4.0.2",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tar": "^6.2.0"
  }
}
