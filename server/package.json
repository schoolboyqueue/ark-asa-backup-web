{
  "name": "ark-asa-backup-server",
  "version": "3.0.0",
  "description": "ARK: Survival Ascended Backup Manager - Backend API",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch src --exec 'npm run build && node dist/server.js'",
    "start": "node dist/server.js",
    "format": "prettier --ignore-path ../.prettierignore --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --ignore-path ../.prettierignore --check \"src/**/*.{ts,js,json}\""
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.47",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/tar": "^6.1.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dockerode": "^4.0.2",
    "express": "^4.18.2",
    "tar": "^6.2.0"
  }
}
